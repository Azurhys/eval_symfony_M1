{% extends 'base.html.twig' %}

{% block title %}Confirmation de Réservation{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
    }

    .container-conf {
        max-width: 800px;
        margin: 40px auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        height: 800px;
    }

    .container h1 {
        text-align: center;
    }

    .confirmation-details {
        padding: 20px;
        margin: 20px 0;
        border-radius: 5px;
    }

    .confirmation-details ul {
        list-style: none;
        padding: 0;
    }

    .confirmation-details li {
        margin-bottom: 10px;
        font-size: 18px;
    }

    .vehicle-photo {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }

    
</style>
{% endblock %}

{% block body %}
<div class="container-conf mt-4 h-75">
    <h1>Confirmation de Réservation</h1>
    
    <div class="confirmation-details"> 
        <h2>Détails de la réservation :</h2>
        <ul>
            <li><img src="{{ vehicle.photo }}" alt="Photo de {{ vehicle.titre }}" class="vehicle-photo"></li>
            <li>Véhicule: {{ vehicle.titre }}</li>
            <li>Marque: {{ vehicle.marque }}</li>
            <li>Date de début: {{ reservation.dateHeureDepart|date('d/m/Y') }}</li>
            <li>Date de fin: {{ reservation.dateHeureFin|date('d/m/Y') }}</li>
            <li>Prix total: {{ reservation.prixTotal }} €</li>
        </ul>
    </div>
    
    <a href="{{ path('home') }}" class="btn btn-primary">Retour à l'accueil</a>
</div>
{% endblock %}
